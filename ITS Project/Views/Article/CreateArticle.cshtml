@using ITS_Library.Models
@model Article

<h1 class="text-center">Create Article</h1>

<form method="post" asp-action="AddArticle">
    <div class="form-group">
        <label asp-for="@Model.Name">Name</label>
        <input asp-for="@Model.Name" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
        <span class="text-danger" asp-validation-for="@Model.Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Price">Price</label>
        <input asp-for="@Model.Price" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
        <span class="text-danger" asp-validation-for="@Model.Price"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Quantity">Quantity</label>
        <input asp-for="@Model.Quantity" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
        <span class="text-danger" asp-validation-for="@Model.Quantity"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Description">Description</label>
        <input asp-for="@Model.Description" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
        <span class="text-danger" asp-validation-for="@Model.Description"></span>
    </div>
    <input type="submit" class="btn btn-primary mt-5" value="Submit" />
</form>
